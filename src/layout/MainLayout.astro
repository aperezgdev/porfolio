---
import HeaderNavbar from "../components/common/NavbarHeader.astro"
import '@fontsource/inter'
---

<html lang=es>
  <head>
    <meta charset='utf-8' />
    <meta name='generator' content={Astro.generator} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>aperezg.dev</title>
  </head>
  <body>
    <HeaderNavbar/>
    <main id="content">
      <slot/>
    </main>
  </body>
</html>

<style is:global>
  body {
    font-family: 'Inter', sans-serif;
    background-image: radial-gradient(rgba(235, 235, 235, 0.3) 2px, transparent 2px), radial-gradient(rgba(235, 235, 235, 0.8) 2px, transparent 2px);
    background-size: 32px 32px;
    background-position: 0 0, 16px 16px;
    background-color: #f3f3f3;
    margin: 0;
  }
  #content {
    width: 60vw;
    margin: auto auto;
    display: flex;
    flex-direction: column;
  }

  main > article {
    margin-bottom: 3rem;
  }

  @media (max-width: 480px) {
    #content {
        width: 80vw;
    }
  }
</style>