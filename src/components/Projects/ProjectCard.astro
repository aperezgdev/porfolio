---
const {name} = Astro.props 
---

<article class="project">
  <slot name="project-image" />
  <div class="description-project">
    <h3>{name}</h3>
    <slot name="badge-list"/>
    <slot/>
  </div>
</article>

<style>
  .image-project {
    width: 20rem;
    height: auto;
    background-color: rgb(218,218,218);
  }
  .project {
    display: grid;
    grid-template-columns: auto 1fr;
  }

  .description-project {
    margin-left: 1rem;
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: 1.5rem;
    margin-top: 0;
  }

  @media (max-width: 500px) {
    .image-project {
      width: 80vw;
      height: 40vw;
    }

    .project {
      grid-template-columns: auto;
    }

    .description-project { 
      margin: auto;
    }

    h3 {
      margin-top: 1rem;
    }
  }
</style>