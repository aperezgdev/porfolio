---
import { getCollection } from "astro:content"
import Title from "./common/Title.astro"
import PostCard from "./Posts/PostCard.astro"

const posts = await getCollection('posts')
---

<article id="posts">
  <Title>Publicaciones</Title>
  <div id="posts-list">
    {
      posts.map(post => 
        <PostCard id={post.data.id} title={post.data.title} description={post.data.description}/>
      )
    }
  </div>
</article>

<style>
  #posts-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-bottom: 15rem;
  }

  @media (max-width: 500px) {
    #posts-list {
      grid-template-columns: auto;
    }
  }
</style>