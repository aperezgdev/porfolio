---
const {title, id, description} = Astro.props

---
<a href=`posts/${id}`>
  <article>
    <h3>{title}</h3>
    <p>{description}</p>
  </article>
</a>

<style>
  article {
    padding: 0.5rem 1rem;
    border: 1px solid rgb(218,218,218);
  }
  h3 {
    font-weight: bolder;
    font-size: 1.2rem;
  }
  p {
    margin-top: -0.5rem;
  }
  a {
    text-decoration: none;
    color: black;
  }

  a:hover {
    background-color: #dfdfdf;
    transition: 0.25s;
  }
</style>